    <script type="text/javascript">
        function headerSlide(num) {
            document.getElementById('banner-header').src = "@Href("~/Content/Images/banners/")header" + num + ".png";
            num++;
            if (num > 3) {
                num = 1;
            }
            setTimeout("headerSlide(" + num + ")", 2000);
        }
        function footerSlide(num) {
            document.getElementById('banner-footer').src = "@Href("~/Content/Images/banners/")footer" + num + ".png";
            num++;
            if (num > 3) {
                num = 1;
            }
            setTimeout("footerSlide(" + num + ")", 2000);
